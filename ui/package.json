{
  "name": "xlsx-ui",
  "private": true,
  "license": "AGPL-3.0-only",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/amir4rab/xlsx-gui.git",
    "directory": "ui"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile-go": "cd ../core && GOOS=js GOARCH=wasm go build -o ../ui/public/wasm/xlsx-core.wasm main.go",
    "cp-go-exec": "cp $(go env GOROOT)/misc/wasm/wasm_exec.js ./src/wasm/bindings.js",
    "prep-core": "pnpm run cp-go-exec && pnpm run compile-go"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.12.8",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
